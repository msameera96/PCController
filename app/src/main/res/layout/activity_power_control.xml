<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pk.edu.cust.fyp.nobeen.sameer.umair.pccontroller.Keyboard">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/cardMenu"
        android:elevation="4dp"
        >
        <TextView

            android:layout_width="match_parent"
            android:id="@+id/powerControlTextView"
            android:layout_height="50dp"
            android:text="Power Control"
            android:gravity="center"
            android:background="#00ff7f"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="21dp"
            android:textStyle="bold"
            android:elevation="6dp"/>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/shutdownBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:background="@drawable/button_selector"
        android:text="Shutdown"
        android:layout_above="@+id/restartBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/restartBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="Restart"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/shutdownBtn"
        android:layout_alignStart="@+id/shutdownBtn"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/signoutBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="Sign out"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/hibernateBtn"
        android:layout_alignLeft="@+id/restartBtn"
        android:layout_alignStart="@+id/restartBtn" />

    <Button
        android:id="@+id/hibernateBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="Hibernate"
        android:textColor="#000000"
        android:layout_above="@+id/sleepBtn"
        android:layout_alignLeft="@+id/signoutBtn"
        android:layout_alignStart="@+id/signoutBtn"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/sleepBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="Sleep"
        android:textColor="#000000"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/hibernateBtn"
        android:layout_alignStart="@+id/hibernateBtn" />
</RelativeLayout>
