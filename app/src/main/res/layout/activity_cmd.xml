<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="pk.edu.cust.fyp.nobeen.sameer.umair.pccontroller.CMD">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/cardCMD"
        android:elevation="4dp"
        >

        <TextView

            android:layout_width="match_parent"
            android:id="@+id/cmdTextView"
            android:layout_height="50dp"
            android:text="@string/cmd"
            android:gravity="center"
            android:background="#00ff7f"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="21dp"
            android:textStyle="bold"
            android:elevation="6dp"/>
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/cmdEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardCMD"
        android:textColorHint="#ffffff"
        android:hint="Commands Type here"
        android:textColor="#ffffff"
        android:ems="10"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cmdEditText"
        android:textColor="#ffffff"
        android:text="T" />


</RelativeLayout>
