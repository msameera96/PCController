<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#808080"
    tools:context="pk.edu.cust.fyp.nobeen.sameer.umair.pccontroller.SignUp">
    <android.support.v7.widget.CardView
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:elevation="4dp"
        >

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter username"
            android:textColorHint="#000000"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:paddingBottom="10dp"
            android:ems="10"
            android:layout_marginTop="95dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:background="@drawable/custom_edittext"
            android:id="@+id/usernameSignUpActEditText" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Enter Password"
            android:textColorHint="#000000"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:layout_marginTop="155dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:ems="10"
            android:textSize="20dp"
            android:background="@drawable/custom_edittext"
            android:id="@+id/passSignUpActEditText" />

        <Button
            android:text="Sign Up"
            android:textColor="#000000"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="215dp"
            android:textStyle="bold"
            android:background="@drawable/button_selector"
            android:id="@+id/signUpBtn" />

        <TextView
            android:text="PC Controller Sign Up"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="25dp"
            android:background="#00ff7f"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpTextView"
            android:elevation="6dp"/>

        <TextView
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="275dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="14dp"
            android:textColor="#0000ff"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:id="@+id/loginSignUpActTextView" />

    </android.support.v7.widget.CardView>

</LinearLayout>
